<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/splash_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <com.firstproject.fad.common.OutlineTextView
        android:id="@+id/tv_splash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquareround"
        android:text="@string/splash_title"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:bufferType="spannable"
        tools:text="안드로이드 개발을 도와죠"
        android:textColor="@color/white"
        android:layout_marginBottom="100dp"
        android:padding="15dp"
        android:background="@drawable/splash_title_radius"
        app:textStroke="true"
        app:textStrokeColor="@color/black"
        app:textStrokeWidth="5"
        android:elevation="8dp"
        />

    <com.firstproject.fad.common.OutlineTextView
        android:id="@+id/tv_splash_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/nanumsquareround"
        android:text="@string/splash_subTitle"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@id/tv_splash_title"
        app:layout_constraintTop_toBottomOf="@id/tv_splash_title"
        android:layout_marginEnd="5dp"
        tools:text="FAD: For Android Development"
        android:textColor="@color/white"
        app:textStroke="true"
        app:textStrokeColor="@color/black"
        app:textStrokeWidth="5"/>

    <TextView
        android:id="@+id/tv_splash_loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splashLoadingText"
        app:layout_constraintTop_toBottomOf="@id/tv_splash_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#000000"
        android:fontFamily="@font/nanumsquareround"
        android:textSize="15sp"
        android:background="@drawable/splash_title_radius"
        android:padding="15dp"
        android:elevation="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>