<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <com.firstproject.fad.OutlineTextView
        android:id="@+id/tv_splash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_pen"
        android:text="@string/splash_title"
        android:textSize="49sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:bufferType="spannable"
        tools:text="안드로이드 개발을 도와죠"
        android:shadowColor="@color/black"
        android:shadowRadius="3"
        android:shadowDx="3"
        android:layout_marginBottom="100dp"
        android:padding="3dp"
        />

    <com.firstproject.fad.OutlineTextView
        android:id="@+id/tv_splash_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nanumsquareround"
        android:text="@string/splash_subTitle"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@id/tv_splash_title"
        app:layout_constraintTop_toBottomOf="@id/tv_splash_title"
        android:layout_marginEnd="5dp"
        tools:text="FAD: For Android Development"
        android:textColor="@color/white"
        app:textStroke="true"
        app:textStrokeColor="@color/black"
        app:textStrokeWidth="5"/>

</androidx.constraintlayout.widget.ConstraintLayout>